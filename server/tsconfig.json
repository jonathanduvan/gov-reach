{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "types": [
            "node"
        ],
        "resolveJsonModule": true
    },
    "include": [
        "../server/**/*.ts",
        "../shared/types/**/*.ts"
    ],
    "paths": {
        "@shared/*": [
            "../shared/types/*"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "../client"
    ]
}